#!/bin/bash
# FTW daemon launcher
# COMMS_TOKEN must be set in environment (or sourced from .env)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export AGENT=FTW
export COMMS_URL=http://127.0.0.1:9754
export COMMS_TOKEN="${COMMS_TOKEN:?Set COMMS_TOKEN in env or .env}"
export AUTONOMY_DIR="$SCRIPT_DIR"
export PROJECT_DIR="${PROJECT_DIR:-$HOME/workspace/red-team-ftw}"
exec "$SCRIPT_DIR/daemon.sh" 300
